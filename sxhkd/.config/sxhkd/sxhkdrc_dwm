# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; notify-send -t 2000 -u normal "sxhkd restared"

# terminal emulator
super + Return
	alacritty	

# colorscheme

super + shift + {c,p}
	~/scripts/{general/color-scheme.sh,dmenu/dmenu-kill-ps.sh}

# dmenu
super + shift + Return 
	dmenu_run
super + {p,s,c}
	~/scripts/dmenu/dmenu-{powermenu,script,configs}.sh
super + t 
	~/scripts/dmenu/dmenu-toolbox.sh

# Rofi
super + d
	rofi -show drun -show-icons
super + e
	rofi -modi Emoji:~/.config/rofi/rofiemoji/rofiemoji.sh -show

# scrot
Print + {_,shift,ctrl} 
	~/scripts/scrot/scrot{,-active,-select}.sh

# media keys
XF86Audio{Play,Prev,Next} 
	playerctl {play-pause,previous,next}
XF86Audio{LowerVolume ,RaiseVolume}
	~/scripts/general/volumectl.sh -{d,u}; pkill -RTMIN+10 dwmblocks
XF86AudioMute 
	pactl set-sink-mute 0 toggle;pkill -RTMIN+10 dwmblocks
F{1,2,3} 
	playerctl {play-pause,previous,next}

# brightness
XF86MonBrightness{Up,Down}
	light {-A,-U} 10;pkill -RTMIN+11 dwmblocks


# dwm hotkeys

## client actions
super + shift + {k,j}
	dwmc movestack {-,+}1
super + {k,j}
	dwmc focusstack {-,+}1
super + ctrl + shift + {q,r}
	dwmc {quit,self_restart}

## toggles
super + n
	dwmc togglealttag
# layouts
super + shift + {d,b}
	dwmc setlayoutex {5,6}
super + shift + {period,comma}
	dwmc cyclelayout {+,-}1

## resources
super + shift + F5
	dwmc xrdb
