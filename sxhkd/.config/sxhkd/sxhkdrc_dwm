# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; notify-send -t 2000 -u normal "sxhkd restared"

# terminal emulator
super + Return
	alacritty	

# dmenu
super + shift + Return 
	dmenu_run
super + {p,o,m,s,c}
	~/scripts/dmenu/dmenu-{powermenu,obs,dict,script,configs}.sh
super + shift + p
	~/scripts/dmenu/dmenu-kill-ps.sh
super + y
	~/github/ytfzf/ytfzf -D
super + t 
	~/github/pirokit/pirokit

# Rofi
super + d
	rofi -show drun -show-icons
super + e
	rofi -modi Emoji:~/.config/rofi/rofiemoji/rofiemoji.sh -show

# scrot
Print + {_,shift,ctrl} 
	~/scripts/scrot/scrot{,-active,-select}.sh

# media keys
XF86Audio{Play,Prev,Next} 
	playerctl {play-pause,previous,next}
XF86Audio{LowerVolume ,RaiseVolume}
	pactl set-sink-volume 0 {-5%,+5%};pkill -RTMIN+10 dwmblocks
XF86AudioMute 
	pactl set-sink-mute 0 toggle;pkill -RTMIN+10 dwmblocks
F{1,2,3} 
	playerctl {play-pause,previous,next}

# brightness
XF86MonBrightness{Up,Down}
	light {-A,-U} 10;pkill -RTMIN+11 dwmblocks


# dwm hotkeys

## tags 
super + {_,ctrl +}{_,shift +} {1-9}
	dwmc {_,toggle}{viewex,tagex} {0-8}
super + 0
	dwmc viewall

## client actions
super + {h,l}
	dwmc setmfact {-,+}0.05
super + shift + {k,j}
	dwmc movestack {-,+}1
super + {k,j}
	dwmc focusstack {-,+}1
super + ctrl + shift + {q,r}
	dwmc {quit,self_restart}
super + shift + q	
	dwmc killclient

## toggles
super + b 
	dwmc togglebar
super + space 
	dwmc togglefloating

# layouts
super + shift + {t,m,d,b}
	dwmc setlayoutex {0,2,5,6}
super + shift + {period,comma}
	dwmc cyclelayout {+,-}1
super + shift + {i,d} 
	dwmc incnmaster {+,-}1

## resources
super + shift + F5
	dwmc xrdb
